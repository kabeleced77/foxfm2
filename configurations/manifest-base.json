{
    "manifest_version": 2,
    "name": "foxfm",
    "version": "1.0",
    "default_locale": "de",
	"options_ui": {
		"page": "UI/Settings/index.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval' 'sha256-D93wm0Me7s52MX53A0Mu/M8/VSTJ07JyhE5IME7DUXs=' 'sha256-E8WV6VvuObH6nVPLMJ3PhAOt10VjZeatCqItFmhHmi8='; object-src 'self'",
    "permissions": [
        "contextMenus",
        "tabs",
        "storage"
    ],
    "background": {
        "scripts": [
            "CrossCutting/Logger/LoggerInterface.js",
            "CrossCutting/Logger/Logger.js",
            "CrossCutting/Settings/AppSettings.js",
            "DataAccess/SettingsRepositoryInterface.js",
            "DataAccess/SettingsRepository.js",
            "CrossCutting/Messageing/SettingMessage.js",
            "foxfmBackground.js"
        ]
    },
    "content_scripts": [
        {
            "all_frames": true,
            "matches": [
                "*://v7.www.onlinefussballmanager.de/*"
            ],
            "js": [
                "CrossCutting/Logger/LoggerInterface.js",
                "CrossCutting/Logger/Logger.js",
                "CrossCutting/Toolkit/DOMHelper.js",
                "CrossCutting/Toolkit/NumberHelper.js",
                "CrossCutting/Toolkit/XpathHelper.js",
                "CrossCutting/Settings/AppSettings.js",
                "DataAccess/SettingsRepositoryInterface.js",
                "DataAccess/SettingsRepository.js",
                "CrossCutting/Messageing/SettingMessage.js",
                "BusinessLogic/StadiumManagerUi.js",
                "BusinessLogic/SettingsManager.js",
                "foxfmApp.js"
            ]
        }
    ]
}